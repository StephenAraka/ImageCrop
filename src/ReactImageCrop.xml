<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.Imagecrop.ImageCrop" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>ImageCrop</name>
    <description>Sample description</description>
    <icon/>
     <properties>
       <property key="imagesEntity" type="entity" required="false">
            <caption>Images entity</caption>
            <category>Data source</category>
            <description>The entity containing rendered images. Note: Should extend 'System.Image'</description>
        </property>
        <property key="dataUrl" type="attribute" required="false" isPath="optional" pathType="reference">
            <caption>Data URL</caption>
            <category>Data source</category>
            <description>The Data URL attribute. Make sure this is an 'Unlimited String'! The signature is stored here as a Base64 encoded PNG image.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>Cropping</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
        <property key="minWidth" type="integer" defaultValue="10">
            <caption>Minimum width</caption>
            <category>Cropping</category>
            <description/>
        </property>
        <property key="minHeight" type="integer" defaultValue="10">
            <caption>Minimum height</caption>
            <category>Cropping</category>
            <description/>
        </property>
        <property key="maxWidth" type="integer" defaultValue="700">
            <caption>Maximum width</caption>
            <category>Cropping</category>
            <description/>
        </property>
        <property key="maxHeight" type="integer" defaultValue="700">
            <caption>Maximum height</caption>
            <category>Cropping</category>
            <description/>
        </property>
        <property key="keepSelection" type="boolean" defaultValue="true">
            <caption>Keep Selection</caption>
            <category>Cropping</category>
            <description>Choose whether to keep focus if user clicks outside the selection area</description>
        </property>
        <property key="aspectRatio" type="enumeration" defaultValue="freeCrop">
            <caption>Aspect ratio</caption>
            <category>Cropping</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="freeCrop">Free crop</enumerationValue>
                <enumerationValue key="square">Square</enumerationValue>
                <enumerationValue key="landscape1">Landscape (16:9)</enumerationValue>
                <enumerationValue key="landscape2">Landscape (12:6)</enumerationValue>
                <enumerationValue key="portrait1">Portrait (2:3)</enumerationValue>
                <enumerationValue key="portrait2">Portrait (4:5)</enumerationValue>
            </enumerationValues>
        </property>
        <property key="afterCropOption" type="enumeration" defaultValue="doNothing">
            <caption>On save</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call nanoflow</enumerationValue>
                <enumerationValue key="showPage">Show page</enumerationValue>
            </enumerationValues>
        </property>
        <property key="afterCropMicroflow" type="microflow" required="false">
            <caption>On save microflow</caption>
            <category>Events</category>
            <description>The microflow to call when an image is saved</description>
            <returnType type="Void"/>
        </property>
        <property key="afterCropNanoflow" type="nanoflow" required="false">
            <caption>On save nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow to call when an image is saved</description>
            <returnType type="Void"/>
        </property>
        <property key="onClickForm" type="form" required="false">
            <caption>On save page</caption>
            <category>Events</category>
            <description>The page to open when an image is saved</description>
        </property>
        <property key="openPageAs" type="enumeration" defaultValue="content">
            <caption>Open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>

